<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_tab_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/shushi2"
                android:gravity="center"
                android:padding="6dp"
                android:text="书市"
                android:textColor="@color/cadetblue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_tab_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/guanshui"
                android:gravity="center"
                android:padding="6dp"
                android:text="聊贴"
                android:textColor="#7c7c7c"
                android:textSize="12sp" />

            <ImageView 
                android:id="@+id/add_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/centeradd"/>
            <TextView
                android:id="@+id/tv_tab_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/liulan"
                android:gravity="center"
                android:padding="6dp"
                android:text="浏览"
                android:textColor="#7c7c7c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_tab_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/accountpng"
                android:gravity="center"
                android:padding="6dp"
                android:text="账号"
                android:textColor="#7c7c7c"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</TabHost>