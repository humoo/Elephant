<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_comment_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/aliceblue"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="6dp" >

                <ImageView
                    android:id="@+id/item_img_lv_item_ui"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:onClick="openMoreInfo"
                    android:src="@drawable/circle_head" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:padding="3dp" >

                    <TextView
                        android:id="@+id/item_name_tv_mian_ui"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:text="姓名昵称"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/item_school_tv_mian_ui"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/item_name_tv_mian_ui"
                        android:gravity="center"
                        android:text="[学校]"
                        android:textColor="#55000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/item_signature_tv_mian_ui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        android:text="签名"
                        android:textColor="#aa000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_post_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="6dp"
                        android:paddingTop="2dp"
                        android:text="发布时间"
                        android:textColor="@color/grey"
                        android:textSize="8sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_content_lay_tv_main_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/white"
                android:clickable="true"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:padding="6dp" >

                <TextView
                    android:id="@+id/item_content_tv_main_uiBookName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="书名 : "
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item_content_tv_main_uiBookAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="作者 : "
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item_content_tv_main_uiBookISBN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="ISBN : "
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item_content_tv_main_uiBookPublisher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="出版社 : "
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="留言 : "
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/item_content_tv_main_ui4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    
    </LinearLayout>

</LinearLayout>